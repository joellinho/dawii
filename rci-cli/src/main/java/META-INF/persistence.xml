<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="dawii">
	 	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	 	<class>persistence.entity.Categoriaproducto</class>
	 	<class>persistence.entity.Cliente</class>
	 	<class>persistence.entity.Detallefacturacion</class>
	 	<class>persistence.entity.Detallepedido</class>
	 	<class>persistence.entity.Empresacliente</class>
	 	<class>persistence.entity.Empresacomercial</class>
	 	<class>persistence.entity.Estadopedido</class>
	 	<class>persistence.entity.Facturacion</class>
	 	<class>persistence.entity.Generopersona</class>
	 	<class>persistence.entity.Pedido</class>
	 	<class>persistence.entity.Productoempresa</class>
	 	<class>persistence.entity.Productotienda</class>
	 	<class>persistence.entity.Repartidor</class>
	 	<class>persistence.entity.Tienda</class>
	 	<class>persistence.entity.Tipocliente</class>
	 	<class>persistence.entity.Tipocomprobante</class>
	 	<class>persistence.entity.Tipodocumento</class>
	 	<class>persistence.entity.Ubigeo</class>
	 	<class>persistence.entity.UbigeoDepa</class>
	 	<class>persistence.entity.UbigeoDist</class>
	 	<class>persistence.entity.UbigeoDistPK</class>
	 	<class>persistence.entity.UbigeoProv</class>
	 	<class>persistence.entity.UbigeoProvPK</class>

		
		<properties>
			<property name="javax.persistence.jdbc.driver"  value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/proydawii"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="mysql"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

			<property name="hibernate.hbm2ddl.auto" value="update"/>
			
			<!-- 
				validate: validate the schema, makes no changes to the database. (No corre?)
				update: update the schema.
				create: creates the schema, destroying previous data.
				create-drop: drop the schema at the end of the session.
			 -->

		</properties>

	</persistence-unit>
	
</persistence>

	   

		